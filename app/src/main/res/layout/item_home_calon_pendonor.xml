<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/image_calon_pendonor_textview"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/image_default_banner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_avatar_calon_pendonor_textview"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/img_default_avatar"/>

                <TextView
                    android:id="@+id/judul_calon_pendonor_textview"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/nama"
                    android:gravity="left"
                    android:layout_marginTop="20dp"
                    android:textSize="16sp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/post_calon_pendonor_textview"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/post_calon_pendonor"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/lokasi_calon_pendonor_textview"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/lokasi"
                android:gravity="right"
                android:drawableRight="@drawable/img_lokasi"
                android:layout_marginTop="10dp"
                android:textSize="16sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/image_calon_pendonor_textview"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@drawable/image_default_banner"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/post_calon_pendonor_textview"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/post_calon_pendonor"
                    android:gravity="start"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/lokasi_donor_mendesak_textview"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="@string/judul_post"
                    android:gravity="left"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/img_lokasi"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pendonor_mendesak_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/satu"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/jumlah_pendonor_mendesak_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/jumlah_butuh_donor"
                        android:layout_marginStart="10dp"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/sisa_hari_donor_mendesak_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sisa_hari"
                    android:gravity="end"
                    android:textSize="16sp"
                    android:layout_marginEnd="20dp"
                    android:drawableRight="@drawable/img_jam"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>